{
  "name": "johnapostol",
  "version": "1.0.0",
  "private": true,
  "description": "John Apostol",
  "repository": "git@github.com:johnapost/johnapostol.git",
  "license": "MIT",
  "author": "John Apostol",
  "main": "pages/index.js",
  "scripts": {
    "build": "next build && next export",
    "build:sitemap": "node ./dev-utils/buildSitemap.js",
    "dev": "npm-run-all --parallel watch:dev watch:posts",
    "start": "serve out -p 3000",
    "watch:dev": "next",
    "watch:posts": "processmd posts/*.md --outputDir content --summaryOutput content/summary.json --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build:sitemap && git add public/sitemap.xml"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "imagemin-mozjpeg": "9.0.0",
    "isomorphic-unfetch": "3.0.0",
    "next": "9.5.3",
    "next-compose-plugins": "2.2.0",
    "next-optimized-images": "2.6.2",
    "prism-react-renderer": "1.1.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-intersection-observer": "8.28.5",
    "react-markdown": "4.3.1"
  },
  "devDependencies": {
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/styled-jsx": "2.2.8",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "cypress": "4.12.1",
    "eslint": "7.8.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "lqip-loader": "2.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "processmd": "4.5.0",
    "responsive-loader": "2.0.0",
    "serve": "11.3.2",
    "sharp": "0.26.0",
    "sort-package-json": "1.44.0",
    "ts-loader": "8.0.3",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  }
}
